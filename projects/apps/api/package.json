{
  "name": "@monorepo/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/presentation/server.ts",
    "dev:debug": "tsx watch --inspect=0.0.0.0:9229 src/presentation/server.ts",
    "start": "node dist/presentation/server.js",
    "build": "tsup src/presentation/server.ts --format esm --dts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@monorepo/shared": "workspace:*",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.7",
    "jsonwebtoken": "^9.0.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@prisma/client": "^7.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^11.0.0",
    "prisma": "^7.2.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "vitest": "^1.2.0"
  }
}
