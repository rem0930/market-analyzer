#!/usr/bin/env bash
#
# OpenAPI 生成物が最新かチェック
# 差分があれば失敗
#
set -euo pipefail
REPO_ROOT="$(git rev-parse --show-toplevel)"
PROJECTS_DIR="${REPO_ROOT}/projects"

if [[ -d "${PROJECTS_DIR}" ]] && [[ -f "${PROJECTS_DIR}/package.json" ]]; then
  cd "${PROJECTS_DIR}"
else
  cd "${REPO_ROOT}"
fi

pnpm openapi:check
