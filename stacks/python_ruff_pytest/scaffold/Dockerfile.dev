# Development Dockerfile for Python application
# Optimized for hot-reload and debugging

FROM python:3.12-slim

WORKDIR /app

# Install development dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install debugpy for remote debugging
RUN pip install --no-cache-dir debugpy

# Copy project files
COPY pyproject.toml ./
COPY src/ ./src/

# Install project dependencies
RUN pip install --no-cache-dir -e ".[dev]"

# Expose application and debug ports
EXPOSE 8000
EXPOSE 5678

# Default command: run with debugpy for debugging
# Use -m debugpy --listen 0.0.0.0:5678 for debugger attachment
CMD ["python", "-m", "debugpy", "--listen", "0.0.0.0:5678", "-m", "app.server"]
